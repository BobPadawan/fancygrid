%ul.js-tablecontrol{ :class => css_class }
  %li
    %span
      = t(:"fancygrid.pagination.per_page", :default => "Results per Page")
    = select_tag(:per_page, options_for_select(fancygrid.per_page_options, fancygrid.view.get_pagination_per_page), :class => "js-per-page")
    
  %li.separator
  %li.button
    = image_tag('/images/fancygrid/spacer.gif', :size => '16x16', :class => 'js-previous', :title => t(:"fancygrif.pagination.prev_page", :default => "Previous page"))
    
  %li
    %span
      = t(:"fancygrid.pagination.page", :default => "Page")
    %input.js-page{ :type => "text", :value => fancygrid.view.get_pagination_page + 1 }
    %span
      = t(:"fancygrid.pagination.of", :default => "of")
    %span.js-page-total
      = 0
      
  %li.button
    = image_tag('/images/fancygrid/spacer.gif', :size => '16x16', :class => 'js-next', :title => t(:"fancygrif.pagination.next_page", :default => "Next page"))
  %li.separator
  %li
    %span
      = t(:"fancygrid.pagination.results", :default => "Total entries")
    %span.js-result-total
      = fancygrid.resultcount or 0
  %li.button
    = image_tag('/images/fancygrid/spacer.gif', :size => '16x16', :class => 'js-reload', :title => t(:"fancygrif.pagination.reload", :default => "Reload"))
  %li.button
    = image_tag('/images/fancygrid/spacer.gif', :size => '16x16', :class => 'js-clear', :title => t(:"fancygrif.search.clear", :default => "Clear search"))
  %li.button
    = image_tag('/images/fancygrid/spacer.gif', :size => '16x16', :class => 'js-magnify', :title => t(:"fancygrif.search.toggle", :default => "Toggle Search"))
      
  - if fancygrid.has_sort_window?
    %li.button
      = image_tag('/images/fancygrid/spacer.gif', :size => '16x16', :class => 'js-sort', :title => t(:"fancygrif.sort.submit", :default => "Sort columns"))
  %li.separator
  
  = yield :fancygrid_buttons