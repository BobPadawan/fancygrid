%ul.js-tablecontrol{ :class => html_class }
  %li
    %span
      = I18n.t("fancygrid.pagination.per_page", :default => "Results per Page")
    = select(:per_page, :to_i, fancygrid_page_opts[:selection], { :selected => fancygrid_page_opts[:selected] }, :class => "js-per-page")
    
  %li.separator
  %li.button
    = image_tag('/images/fancygrid/spacer.gif', :size => '16x16', :class => 'js-previous', :title => I18n.t("fancygrif.pagination.prev_page", :default => "Previous page"))
    
  %li
    %span
      = I18n.t("fancygrid.pagination.page", :default => "Page")
    %input.js-page{ :type => "text", :value => "1"}
    %span
      = I18n.t("fancygrid.pagination.of", :default => "of")
    %span.js-page-total
      = fancygrid.pagecount or 0
      
  %li.button
    = image_tag('/images/fancygrid/spacer.gif', :size => '16x16', :class => 'js-next', :title => I18n.t("fancygrif.pagination.next_page", :default => "Next page"))
  %li.separator
  %li
    %span
      = I18n.t("fancygrid.pagination.resultcount", :default => "Total entries")
    %span.js-result-total
      = fancygrid.resultcount or 0
      
  %li.button
    = image_tag('/images/fancygrid/spacer.gif', :size => '16x16', :class => 'js-reload', :title => I18n.t("fancygrif.pagination.reload", :default => "Reload"))
  %li.button
    = image_tag('/images/fancygrid/spacer.gif', :size => '16x16', :class => 'js-clear', :title => I18n.t("fancygrif.search.clear", :default => "Clear search"))
  %li.button
    = image_tag('/images/fancygrid/spacer.gif', :size => '16x16', :class => 'js-magnify', :title => I18n.t("fancygrif.search.toggle", :default => "Show or hide searchtab"))
    
